<link rel="stylesheet" href="static/css/regNewWorker.css">
    
<div class="containerRegNewWorker">
    <main class="content">
        <div class="logo">
            <img src="static/img/logoReg.svg" alt="Нету? А где оно?" class="logo_svg">
        </div>
        <h1 class="reg">Регистрация</h1> 
        <form class="data" action="regNewWorker" method="post">
            <div class="reg_form">
                <label class="field_label" for="name">Фамилия, имя, отчество</label>
                <div class="brakedown">
                    <input type="text" class="usr_data" id="name" name="fullName" placeholder="Введите ФИО">
                </div>
                
            </div>
            <div class="reg_form">
                <label class="field_label" for="name">Номер телефона</label>
                <input type="text" class="usr_data" id="name" name="tel" placeholder="Введите номер">
            </div>
            <div class="reg_form">
                <label class="field_label" for="dep" name="dep">Депортамент</label>
                <br>
                <select name="dep" id="" class="depSelect">
                    <option value="Link 1">Link 1</option>
                    <option value="Link 2">Link 2</option>
                    <option value="Link 3">Link 3</option>
                </select>
            </div> 
            <div class="reg_form">
                <label class="field_label" for="name" >Подразделение</label>
                <br>
                <select  id="" name="subd" class="subdSelect">
                    <option value="Link 1">Link 1</option>
                    <option value="Link 2">Link 2</option>
                    <option value="Link 3">Link 3</option>
                </select>
            </div>
            <div class="reg_form">
                <label class="field_label" for="name" >Должность</label>
                <br>
                <select id="" class="subdSelect" name="employee">
                    <option value="Link 1">Link 1</option>
                    <option value="Link 2">Link 2</option>
                    <option value="Link 3">Link 3</option>
                </select>
            </div>
            <div class="gender">
                <p>Пол</p>
                    <div class="gender_value">
                        <p><input type="radio" class="radioBtn" name="gender" value="male">Муж.</p>
                        <p><input type="radio" class="radioBtn" name="gender" value="female">Жен.</p>
                    </div>
            </div>
            <div class="btn">
                <input class="btn_form" type="submit" value="Зарегистрировать">
            </div>
        </form>
       
    </main>
</div>
<script src="/static/js/regNewWorker.js"></script>